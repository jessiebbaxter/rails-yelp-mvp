<div class="wrapper">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-6 offset-sm-3">
				<%= link_to "<< Back to restaurants", restaurants_path %>
				<h1>Add a Restaurant</h1>
				<%= simple_form_for @restaurant do |f| %>
				  <%= f.input :name %>
				  <%= f.input :address %>
				  <%= f.input :phone_number %>
				  <%= f.input :category %>
				  <%= f.submit "Add", class: "btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
